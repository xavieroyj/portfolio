---
import GenericLayout from "../layouts/GenericLayout.astro";
import AnimatedCard from "../react/AnimatedCard.tsx";
import AnimatedHeader from "../react/AnimatedHeader";
---

<GenericLayout title="Home">
    <main
        class="h-full flex justify-center items-center container mx-auto px-4"
    >
        <div class="md:w-3/5">
            <AnimatedHeader client:load/>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-4">
                <a href="/about#projects" class="h-full">
                    <AnimatedCard
                        client:load
                        title="Projects"
                        description="Explore my portfolio of completed projects."
                        direction="left"
                    />
                </a>

                <a href="/blog" class="h-full">
                    <AnimatedCard
                        client:load
                        title="Blog"
                        description="Read about my learning journey and insights."
                        direction="top"
                    />
                </a>
                
                <a href="/contact" class="h-full">
                    <AnimatedCard
                        client:load
                        title="Contact Me"
                        description="Get in touch for collaborations and opportunities."
                        direction="bottom"
                    />
                </a>
                
                <a href="/about" class="h-full">
                    <AnimatedCard
                        client:load
                        title="About Me"
                        description="Learn about my journey and achievements."
                        direction="right"
                    />
                </a>
            </div>
        </div>
    </main>
</GenericLayout>

<style>
    /* Ensure grid items have equal height */
    .grid {
        grid-auto-rows: 1fr;
    }
    
    /* Make anchor tags fill their grid cell */
    .grid > a {
        display: block;
        height: 100%;
    }
</style>
