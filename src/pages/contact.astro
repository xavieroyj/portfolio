---
import GenericLayout from "../layouts/GenericLayout.astro";
import { Github, Linkedin, Twitter } from "lucide-astro";
---

<GenericLayout title="Contact Me">
    <main>
        <div class="flex flex-col items-center justify-center min-h-screen p-4">
            <div
                class="shadow-xl border dark:border-none dark:bg-slate-700 rounded-lg overflow-hidden max-w-4xl w-full"
            >
                <div class="flex flex-col md:flex-row">
                    <div class="md:w-2/3 p-8">
                        <h1 class="text-3xl font-bold mb-4">Contact Me</h1>
                        <p class="mb-6">
                            Drop me a text <a
                                href="mailto:xavier.oyj1999@gmail.com"
                                class="text-purple-600 hover:text-purple-800 underline"
                                >here</a
                            > if you have any potential collaboration to work on.
                        </p>
                        <form action="/action_page.php" class="space-y-4">
                            <div>
                                <label
                                    for="fname"
                                    class="block text-sm font-medium mb-1"
                                    >Full name:</label
                                >
                                <input
                                    type="text"
                                    id="fname"
                                    name="fname"
                                    class="w-full px-3 font-mono text-gray-700 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
                                />
                            </div>
                            <div>
                                <label
                                    for="lname"
                                    class="block text-sm font-medium mb-1"
                                    >Message:</label
                                >
                                <textarea
                                    id="message"
                                    name="message"
                                    rows={4}
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 font-mono text-gray-700 focus:ring-purple-500"
                                    placeholder="Type your message here..."
                                ></textarea>
                            </div>
                            <button
                                type="submit"
                                class="w-full bg-purple-600 text-white py-2 px-4 rounded-md hover:bg-purple-700 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-opacity-50"
                            >
                                Submit
                            </button>
                        </form>
                    </div>
                    <div
                        class="md:w-1/3 bg-purple-600 p-8 flex flex-col justify-center items-center"
                    >
                        <h2 class="text-2xl font-bold text-white mb-6">
                            Connect with me
                        </h2>
                        <div class="flex flex-col space-y-4">
                            <a
                                href="https://github.com/xavieroyj"
                                target="_blank"
                                class="text-white hover:text-purple-200 transition duration-300 ease-in-out flex items-center"
                            >
                                <Github class="w-6 h-6 mr-2" />
                                <span>GitHub</span>
                            </a>
                            <a
                                href="https://www.linkedin.com/in/xavieroyj/"
                                target="_blank"
                                class="text-white hover:text-purple-200 transition duration-300 ease-in-out flex items-center"
                            >
                                <Linkedin class="w-6 h-6 mr-2" />
                                <span>LinkedIn</span>
                            </a>
                            <a
                                href="https://x.com/xavieroyj"
                                target="_blank"
                                class="text-white hover:text-purple-200 transition duration-300 ease-in-out flex items-center"
                            >
                                <Twitter class="w-6 h-6 mr-2" />
                                <span>Twitter</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</GenericLayout>
