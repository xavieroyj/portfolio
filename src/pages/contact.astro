---
import GenericLayout from "../layouts/GenericLayout.astro";
import { Github, Linkedin, Twitter } from "lucide-astro";
---

<GenericLayout title="Contact Me">
    <main class="container mx-auto px-4 flex flex-col items-center justify-center min-h-[70vh]">
        <div class="w-full max-w-xl space-y-8">
            <!-- Header Section -->
            <div class="text-center space-y-2">
                <h1 class="text-4xl font-bold">Let's Connect</h1>
                <p class="text-gray-600 dark:text-gray-400">
                    Have a project in mind? I'd love to hear about it.
                </p>
            </div>

            <!-- Social Links Section -->
            <div class="flex justify-center gap-4">
                <a
                    href="https://github.com/xavieroyj"
                    target="_blank"
                    class="p-2.5 rounded-full border border-gray-200 dark:border-gray-700/50 hover:border-purple-500 dark:hover:border-purple-500 transition-colors duration-300"
                    aria-label="GitHub"
                >
                    <Github class="w-5 h-5" />
                </a>
                <a
                    href="https://www.linkedin.com/in/xavieroyj/"
                    target="_blank"
                    class="p-2.5 rounded-full border border-gray-200 dark:border-gray-700/50 hover:border-purple-500 dark:hover:border-purple-500 transition-colors duration-300"
                    aria-label="LinkedIn"
                >
                    <Linkedin class="w-5 h-5" />
                </a>
                <a
                    href="https://x.com/xavieroyj"
                    target="_blank"
                    class="p-2.5 rounded-full border border-gray-200 dark:border-gray-700/50 hover:border-purple-500 dark:hover:border-purple-500 transition-colors duration-300"
                    aria-label="Twitter"
                >
                    <Twitter class="w-5 h-5" />
                </a>
            </div>

            <!-- Contact Form Section -->
            <div class="space-y-4">
                <div class="text-center">
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                        or send me a message directly
                    </span>
                </div>
                
                <form
                    action="https://formspree.io/f/myzyglgv"
                    method="post"
                    class="space-y-3"
                >
                    <div class="space-y-3">
                        <input
                            type="text"
                            id="name"
                            name="name"
                            placeholder="Your name"
                            required
                            class="w-full px-4 py-2.5 rounded-lg bg-gray-100 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700/50 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 focus:ring-opacity-20 outline-none transition-all duration-300"
                        />
                        <input
                            type="email"
                            id="email"
                            name="email"
                            placeholder="Your email"
                            required
                            class="w-full px-4 py-2.5 rounded-lg bg-gray-100 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700/50 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 focus:ring-opacity-20 outline-none transition-all duration-300"
                        />
                        <textarea
                            id="message"
                            name="message"
                            rows="4"
                            placeholder="Your message"
                            required
                            class="w-full px-4 py-2.5 rounded-lg bg-gray-100 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700/50 focus:border-purple-500 focus:ring-2 focus:ring-purple-500 focus:ring-opacity-20 outline-none transition-all duration-300"
                        ></textarea>
                    </div>
                    <button
                        type="submit"
                        class="w-full py-2.5 px-6 rounded-lg bg-purple-500 hover:bg-purple-600 text-white font-medium transition-colors duration-300"
                    >
                        Send Message
                    </button>
                </form>
            </div>

            <!-- Email Alternative -->
            <div class="text-center text-sm text-gray-500 dark:text-gray-400">
                Prefer email? Reach me at <a
                    href="mailto:xavier.oyj1999@gmail.com"
                    class="text-purple-500 hover:text-purple-600 transition-colors duration-300"
                >xavier.oyj1999@gmail.com</a
                >
            </div>
        </div>
    </main>
</GenericLayout>